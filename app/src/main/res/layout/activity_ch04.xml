<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ch04"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kantai.androidexampledemo.Ch04Activity">

    <com.beardedhen.androidbootstrap.BootstrapWell
        android:id="@+id/Ch04_TextView_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:backgroundTint="@color/bootstrap_brand_warning"
        app:bootstrapSize="xl">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Ch01_TextView_Title"
            android:textSize="30sp"
            android:textStyle="normal|bold" />
    </com.beardedhen.androidbootstrap.BootstrapWell>

    <com.beardedhen.androidbootstrap.BootstrapWell
        android:id="@+id/Ch04_TextView_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Ch04_TextView_01"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:backgroundTint="@color/bootstrap_brand_danger"
        app:bootstrapSize="xl">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Ch01_TextView_Title"
            android:textSize="30sp"
            android:textStyle="normal|bold" />
    </com.beardedhen.androidbootstrap.BootstrapWell>

    <com.beardedhen.androidbootstrap.BootstrapWell
        android:id="@+id/Ch04_TextView_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Ch04_TextView_02"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:backgroundTint="@color/bootstrap_brand_success"
        app:bootstrapSize="xl">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Ch01_TextView_Title"
            android:textSize="30sp"
            android:textStyle="normal|bold" />
    </com.beardedhen.androidbootstrap.BootstrapWell>

    <com.beardedhen.androidbootstrap.BootstrapWell
        android:id="@+id/Ch04_TextView_04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Ch04_TextView_03"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        app:bootstrapSize="xl">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Ch01_TextView_Title"
            android:textSize="30sp"
            android:textStyle="normal|bold" />
    </com.beardedhen.androidbootstrap.BootstrapWell>
</RelativeLayout>
